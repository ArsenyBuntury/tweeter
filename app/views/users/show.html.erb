<% provide :page_title, @user.name %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
<h1>
    <%= @user.name %>
    <section class="stats">
    <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' %>
</h1>
<%= link_to 'Edit profile', edit_user_path, class: 'btn btn-danger'%>
<%= link_to 'Go back', home_path, class: 'btn btn-info' %>
<p>
<section class="micropost_form">
          <%= render 'shared/micropost_form' %>
          </section>
          </p>
        </section>
    </aside>
    
    <div class="col-md-8">
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
    <%= render @microposts %>
    </ol>
    
    <% end %>
    </div>
</div>
<%= paginate @microposts %>