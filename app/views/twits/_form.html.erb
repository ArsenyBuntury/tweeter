
<%= form_with model: twit do |form|%>
	<p>
		<%= form.label :name %> <br>
		<%= form.text_field :name %>
		<% twit.errors.full_messages_for(:name).each do |message| %>
		<div><%= message %></div>
		<% end %>
	</p>
	<p>
		<%= form.label :body %> <br>
		<%= form.text_area :body %>
		<% twit.errors.full_messages_for(:body).each do |message| %>
		<div><%=message%></div>
		<% end %>
	</p>
	<p>
		
		<%= form.submit %>
	</p>
	<% end %>