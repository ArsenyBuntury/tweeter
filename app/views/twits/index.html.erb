<% provide :page_title, t('menu.twits')%>
<% currently_at %>
<h2><%=t('menu.twits')%></h2>
<table>
<tr> <% if user_signed_in? %>
<%= link_to t('menu.create'), new_twit_path, class: "btn btn-aware" %></tr>
<tr>&#160 &#160 &#160</tr> <% end %>
<tr><%= form_with url: twits_path, method: :get do |form| %>
	<%= form.label :query, t('menu.search_for') %>
	<%= form.collection_select :tag_ids, @tags, :id, :title, {selected: params[:tag_ids]},
	multiple: true, required: true,
	class: 'js-multiple-select w-100', data: {'ajax-url': '/api/tags'} %>
	<%= form.submit t('menu.search') %></tr>
	<%= paginate @twits %>

</table>
<ul>
	
	<% @twits.each do |twit| %>
	<li>
		
		<%= link_to twit.name, twit , class: "text-decoration-none, btn btn-create"%>
		<ul class='truncate'>
		<%= strip_tags(twit.body)%>
	</ul>
	</li>
	<%end%>
	</ul>
	
	
	<% end %>

	<%= paginate @twits %>