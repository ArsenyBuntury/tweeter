<h2>Главная страница твиттера</h2>
<ul>
	<% @twits.each do |twit| %>
	<li>
		<%= link_to twit.name, twit %>
	</li>
	<%end%>
	</ul>
	<%= link_to "Create twit", new_twit_path %>
	<%= form_with url: "/search", method: :get do |form| %>
	<%= form.label :query, "Search for:" %>
	<%= form.text_field :query %>
	<%= form.submit "Search" %>
	<% end %>
