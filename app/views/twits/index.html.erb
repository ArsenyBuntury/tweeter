<h2>All twits</h2>
<table>
<tr><%= link_to "Create twit", new_twit_path %></tr>
<tr>&#160 &#160 &#160</tr>
<tr><%= form_with url: "/search", method: :get do |form| %>
	<%= form.label :query, "Search for:" %>
	<%= form.text_field :query %>
	<%= form.submit "Search" %></tr>

</table>
<ul>
	<% @twits.each do |twit| %>
	<li>
		<%= link_to twit.name, twit %>
		<ul>
		<li><%= link_to twit.body, twit %></li>
	</ul>
	</li>
	<%end%>
	</ul>
	
	
	<% end %>
