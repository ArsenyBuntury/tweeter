<% provide :page_title, 'Twit' %>
<% currently_at %>

<h2> <%= @twit.name %></h2>
<div> <%= sanitize @twit.body %></div>
<div class="my-2">
	<%= render @twit.tags%>
	</div>
	
	<hr> <%= link_to t('twit.edit'), edit_twit_path(@twit), :class=>'btn btn-success' %>
	<%= link_to t('twit.delete'), twit_path(@twit), data: {confirm:"Are you sure?"}, method: :delete, class:'btn btn-danger'%>
		
		<hr><div><strong><%=t('twit.user')%></strong></div><%= current_user.name_or_email%>

		<h5><%= t('twit.add_comment') %></h5>
		
	<div class="main">
	<%= render "comments/form"%>

	<h5><%= t('twit.comments')%> :</h5>

	<%= paginate @comments %>
	<% @comments.each do |comment| %>
	<p>
		<strong><%=comment.commenter%></strong>		
	</p>
	<p>
		<strong><%=comment.body%></strong>	
	</p>
	<%= link_to 'Delete', twit_comment_path(@twit,comment), class: 'btn btn-danger btn-xs',data:{ confirm:"Are you sure?"}, method: :delete %>
	<% end %>

	<%= paginate @comments %>
	</div>