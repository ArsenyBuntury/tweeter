<h1> <%= @twit.name %></h1>
<p> <%= @twit.body %></p>


	<hr> <%= link_to "Edit twit", edit_twit_path(@twit), :class=>'btn btn-success' %>
	<%= link_to "Destroy", twit_path(@twit), :class=>'btn btn-danger', method: :delete, data: {confirm: "Are you sure?"} %> 

	<h5>Comments :</h5>
	<% @twit.comments.each do |comment| %>
	<p>
		<strong><%=comment.commenter%></strong>
		
	</p>
	<p>
		<strong><%=comment.body%></strong>
		
	</p>
	<% end %>


<h5>Add your comment :</h5>
<%= form_for([@twit,@twit.comments.build]) do |f| %>

<% if @twit.errors.any? %>
<% @twit.errors.full_messages.each do |msg| %>
<div class="alert alert-danger"><%= msg %> </div>
<% end %>
<% end %>
<p>
	Username<br>
	<%= f.text_field(:commenter,{:class => "form-control"}) %>
</p>
<p>
	Your comment<br>
	<%= f.text_area(:body,{:class => "form-control"})%>
</p>
<p>
	<%= f.submit("Add your comment",{:class => "btn btn-success"})%>
</p>
<% end %>










